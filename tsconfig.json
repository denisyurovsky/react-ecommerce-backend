{
  "compilerOptions": {
    "outDir": "./build",
    "target": "ES2020",
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": [ "node" ],
    "typeRoots": [ "../node_modules/@types" ]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}